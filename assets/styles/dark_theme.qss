/*
 * ====================================================
 * DARK THEME - Dietician Client Tracker
 * ====================================================
 * Modern dark design for reduced eye strain
 * Focus: Comfortable viewing in low-light environments
 */

/* Login Window Title */
QLabel#label_title {
    font-size: 16pt;
    font-weight: bold;
    color: #FFFFFF;
}

/* 
 * COLOR PALETTE - Dark Mode
 * ====================================================
 */

/* 
 * PRIMARY: #34C759 (Apple Health Green - PRESERVED)
 * - Usage: Primary buttons, active states, confirmations
 * - Why: Maintains consistency with light theme
 */

/* 
 * SECONDARY: #0A84FF (Brighter Apple Blue for dark mode)
 * - Usage: Secondary actions, links, highlights
 * - Why: Better visibility on dark backgrounds
 */

/* 
 * DANGER: #FF453A (Brighter Apple Red for dark mode)
 * - Usage: Delete, destructive actions
 * - Why: Better contrast on dark background
 */

/* 
 * WARNING: #FF9500 (Apple Orange - PRESERVED)
 * - Usage: Warnings, alerts
 * - Why: Still visible on dark background
 */

/* 
 * BACKGROUND: #1F1F1F (Deep Dark Gray)
 * - Usage: Main page background
 * - Why: Easy on eyes, not pure black
 */

/* 
 * CARD: #2A2A2A (Dark Gray)
 * - Usage: Cards, panels, input backgrounds
 * - Why: Slight contrast from background
 */

/* 
 * TEXT: #E5E5E5 (Light Gray)
 * - Usage: Primary text, headings
 * - Why: High contrast, readable
 */

/* 
 * SUBTITLE: #B0B0B0 (Medium Gray)
 * - Usage: Secondary text, labels
 * - Why: Visual hierarchy, softer appearance
 */

/* 
 * SEPARATOR: #3A3A3A (Dark Border Gray)
 * - Usage: Borders, dividers, subtle separations
 * - Why: Minimal, subtle
 */

/* ====================================================
 * GLOBAL DEFAULTS
 * ====================================================
 */

QWidget {
    background-color: #1F1F1F;
    color: #E5E5E5;
    font-family: "Segoe UI", -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 13px;
}

QMainWindow {
    background-color: #1F1F1F;
}

/* ====================================================
 * BUTTONS (QPushButton) - Dark Theme Style
 * ====================================================
 */

QPushButton {
    background-color: #34C759;
    color: #FFFFFF;
    border: none;
    border-radius: 8px;
    padding: 10px 20px;
    font-weight: 600;
    font-size: 13px;
}

QPushButton:hover {
    background-color: #3DD65F;
}

QPushButton:pressed {
    background-color: #2FBF52;
}

/* ====================================================
 * BUTTON CATEGORIES
 * ====================================================
 */

/* Primary Actions - Green */
#btn_save, #btn_add_new, #btn_new_diet, #btn_new_measurement {
    background-color: #34C759;
    color: #FFFFFF;
}

#btn_save:hover, #btn_add_new:hover, #btn_new_diet:hover, #btn_new_measurement:hover {
    background-color: #3DD65F;
}

#btn_save:pressed, #btn_add_new:pressed, #btn_new_diet:pressed, #btn_new_measurement:pressed {
    background-color: #2FBF52;
}

/* Danger Actions - Red */
#btn_delete {
    background-color: #FF453A;
    color: #FFFFFF;
}

#btn_delete:hover {
    background-color: #FF5A50;
}

#btn_delete:pressed {
    background-color: #FF3B30;
}

/* Secondary Actions - Gray */
#btn_cancel {
    background-color: #3A3A3A;
    color: #E5E5E5;
}

#btn_cancel:hover {
    background-color: #4A4A4A;
}

#btn_cancel:pressed {
    background-color: #2A2A2A;
}

/* ====================================================
 * INPUT FIELDS (QLineEdit) - Dark Theme Style
 * ====================================================
 */

QLineEdit {
    background-color: #2A2A2A;
    color: #E5E5E5;
    border: 1px solid #3A3A3A;
    border-radius: 8px;
    padding: 10px 12px;
    font-size: 13px;
    selection-background-color: #34C759;
    selection-color: #1F1F1F;
}

QLineEdit:focus {
    border: 1px solid #34C759;
    background-color: #2A2A2A;
}

QLineEdit::placeholder {
    color: #707070;
}

/* ====================================================
 * TEXT AREAS (QPlainTextEdit)
 * ====================================================
 */

QPlainTextEdit {
    background-color: #2A2A2A;
    color: #E5E5E5;
    border: 1px solid #3A3A3A;
    border-radius: 8px;
    padding: 12px;
    font-size: 13px;
    selection-background-color: #34C759;
    selection-color: #1F1F1F;
}

QPlainTextEdit:focus {
    border: 1px solid #34C759;
    background-color: #2A2A2A;
}

/* ====================================================
 * LABELS (QLabel)
 * ====================================================
 */

QLabel {
    color: #E5E5E5;
    font-size: 13px;
}

QLabel#TitleLabel {
    color: #E5E5E5;
    font-size: 20px;
    font-weight: 700;
}

QLabel#SubtitleLabel {
    color: #B0B0B0;
    font-size: 12px;
}

/* Form Labels - Add Client / Edit Client */
QLabel#label_name,
QLabel#label_phone,
