    border-radius: 8px;
    padding: 10px;
}

/* ====================================================
 * TABLES (QTableWidget) - Dark Theme Design
 * ====================================================
 */

QTableWidget {
    background-color: #2A2A2A;
    gridline-color: #353535;
    border: 1px solid #3A3A3A;
    border-radius: 8px;
}

QHeaderView::section {
    background-color: #1F1F1F;
    color: #E5E5E5;
    padding: 10px 8px;
    border: none;
    font-weight: 600;
    border-bottom: 1px solid #3A3A3A;
}

QTableWidget::item {
    padding: 10px 8px;
    background-color: #2A2A2A;
    color: #E5E5E5;
    border: none;
}

QTableWidget::item:hover {
    background-color: #353535;
}

QTableWidget::item:selected {
    background-color: #1B3A1A;
    color: #34C759;
}

QTableWidget QScrollBar:vertical {
    background-color: #1F1F1F;
    width: 10px;
}

QTableWidget QScrollBar::handle:vertical {
    background-color: #505050;
    border-radius: 5px;
    min-height: 20px;
}

QTableWidget QScrollBar::handle:vertical:hover {
    background-color: #606060;
}

/* ====================================================
 * COMBOBOX (QComboBox) - Dark Theme Dropdown
 * ====================================================
 */

QComboBox {
    background-color: #2A2A2A;
    color: #E5E5E5;
    border: 1px solid #3A3A3A;
    border-radius: 8px;
    padding: 10px 12px;
    font-size: 13px;
}

QComboBox:focus {
    border: 1px solid #34C759;
    background-color: #2A2A2A;
}

QComboBox::drop-down {
    background-color: transparent;
    border: none;
    width: 30px;
}

QComboBox::down-arrow {
    image: url(none);
    width: 0px;
}

QComboBox QAbstractItemView {
    background-color: #2A2A2A;
    color: #E5E5E5;
    border: 1px solid #3A3A3A;
    border-radius: 8px;
    selection-background-color: #34C759;
    selection-color: #1F1F1F;
}

/* ====================================================
 * DATE/TIME EDIT (QDateEdit, QTimeEdit)
 * ====================================================
 */

QDateEdit, QTimeEdit {
    background-color: #2A2A2A;
    color: #E5E5E5;
    border: 1px solid #3A3A3A;
    border-radius: 8px;
    padding: 10px 12px;
    font-size: 13px;
}

QDateEdit:focus, QTimeEdit:focus {
    border: 1px solid #34C759;
    background-color: #2A2A2A;
}

QDateEdit::drop-down, QTimeEdit::drop-down {
    width: 0px;
    background-color: transparent;
    border: none;
}

QDateEdit::down-arrow, QTimeEdit::down-arrow {
    image: url(none);
    width: 0px;
}

/* ====================================================
 * SCROLLBAR (Global) - Dark Theme
 * ====================================================
 */

QScrollBar:vertical {
    background-color: #1F1F1F;
    width: 10px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #505050;
    border-radius: 5px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #606060;
}

QScrollBar:horizontal {
    background-color: #1F1F1F;
    height: 10px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background-color: #505050;
    border-radius: 5px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #606060;
}

/* ====================================================
 * CALENDAR WIDGET (QCalendarWidget) - Dark Theme
 * ====================================================
 */

QCalendarWidget {
